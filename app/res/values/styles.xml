<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
  <style name="Theme.Transparent" parent="Theme.Nebel_tv">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
    
    <style name="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/rounded_btn_height</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    
    <style name="Text">
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Text.Mini">
        <item name="android:textSize">@dimen/mini_text_size</item>
    </style>
    
    <style name="Text.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>
    
    <style name="Text.Big">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>
    
</resources>
