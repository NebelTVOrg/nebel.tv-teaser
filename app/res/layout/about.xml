<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center_horizontal">
    
    <LinearLayout 
        android:layout_marginTop="@dimen/about_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_panel"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_logo"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/about_link_text_size"
            android:textColor="@android:color/white"
            android:text="@string/nebel_main_url"/>
        
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        style="@style/Text.Small"
        android:textColor="@android:color/white"
        android:text="@string/about_msg"/>
    
    <TextView 
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_version_margin"
        style="@style/Text.Big"
        android:textColor="@android:color/white"/>
    
    <TextView
        android:id="@+id/txt_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Medium"
        android:textColor="@android:color/white"/>
    
    <Button 
        android:id="@+id/btn_finish"
        style="@style/RoundedButton"
        android:layout_marginTop="@dimen/about_btn_margin"
        android:text="@android:string/ok"/>

</LinearLayout>
